{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Error Rate by Status Code",
      "type": "timeseries",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "never",
            "stacking": {
              "mode": "normal"
            }
          },
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 10 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum by (status) (rate(droppr_http_request_errors_total[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Error Rate (4xx vs 5xx)",
      "type": "stat",
      "gridPos": { "h": 9, "w": 6, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(droppr_http_request_errors_total{status=~\"4..\"}[5m]))",
          "legendFormat": "4xx Errors",
          "refId": "A"
        },
        {
          "expr": "sum(rate(droppr_http_request_errors_total{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx Errors",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Error Percentage",
      "type": "gauge",
      "gridPos": { "h": 9, "w": 6, "x": 18, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1
        }
      },
      "targets": [
        {
          "expr": "sum(rate(droppr_http_request_errors_total[5m])) / sum(rate(droppr_http_requests_total[5m]))",
          "legendFormat": "Error %",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Request Latency (p50, p95, p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 9 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          },
          "unit": "s"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(droppr_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(droppr_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(droppr_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Top 10 Slowest Endpoints",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 9 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left"
          },
          "unit": "s"
        }
      },
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint, method) (rate(droppr_http_request_duration_seconds_sum[5m])) / sum by (endpoint, method) (rate(droppr_http_request_duration_seconds_count[5m])))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {
              "endpoint": 0,
              "method": 1,
              "Value": 2
            },
            "renameByName": {
              "endpoint": "Endpoint",
              "method": "Method",
              "Value": "Avg Latency"
            }
          }
        }
      ]
    },
    {
      "title": "Failed Requests by Endpoint",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint) (increase(droppr_http_request_errors_total[1h])))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Media Processing Errors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": {
              "mode": "normal"
            }
          },
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "sum by (type) (rate(droppr_video_transcode_errors_total[5m]))",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Rate Limit Violations",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 25 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2
          },
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(droppr_rate_limit_exceeded_total[5m]))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Database Query Errors",
      "type": "stat",
      "gridPos": { "h": 7, "w": 6, "x": 12, "y": 25 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "sum(increase(droppr_db_errors_total[1h]))",
          "legendFormat": "DB Errors (1h)",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Cache Errors",
      "type": "stat",
      "gridPos": { "h": 7, "w": 6, "x": 18, "y": 25 },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "sum(increase(droppr_cache_errors_total[1h]))",
          "legendFormat": "Cache Errors (1h)",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Recent Error Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "{job=\"droppr-media-server\"} |~ \"ERROR|CRITICAL|FATAL\"",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["droppr", "error-monitoring", "alerts"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m"]
  },
  "timezone": "browser",
  "title": "Droppr Error Monitoring Dashboard",
  "uid": "droppr-errors",
  "version": 1
}
