  "panels": [
    {
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(droppr_http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "rate(droppr_http_request_errors_total[5m])",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Media Processing Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(droppr_video_transcode_duration_seconds_sum[5m]) / rate(droppr_video_transcode_duration_seconds_count[5m])",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Cache Hit Ratio",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "rate(droppr_share_cache_hits_total[5m]) / (rate(droppr_share_cache_hits_total[5m]) + rate(droppr_share_cache_misses_total[5m]))",
          "legendFormat": "Hit Ratio",
          "refId": "A"
        }
      ]
    }
  ],
